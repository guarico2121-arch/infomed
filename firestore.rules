rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /doctor_profiles/{doctorId} {
      allow get, list: if true;
      allow create: if isOwner(doctorId);
      allow update: if isOwner(doctorId) || isAdmin();
      
      match /posts/{postId} {
        allow read: if true;
        allow write: if isOwner(doctorId);
      }
      match /statuses/{statusId} {
        allow read: if true;
        allow write: if isOwner(doctorId);
      }
    }

    match /ratings/{ratingId} {
      allow get, list: if true;
      allow create: if request.auth != null && isOwner(request.resource.data.patientId);
      allow update, delete: if request.auth != null && isOwner(resource.data.patientId);
    }

    match /banners/{bannerId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow write: if isOwner(userId) || isAdmin();

      match /subscriptions/{subscriptionId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    match /appointments/{appointmentId} {
      allow read: if request.auth != null && (isOwner(resource.data.patientId) || isOwner(resource.data.doctorId));
      allow list: if request.auth != null && 
                    (request.query.where.size() > 0 && request.query.where[0][2] == request.auth.uid && request.query.where[0][0] == 'patientId' ||
                     request.query.where.size() > 0 && request.query.where[0][2] == request.auth.uid && request.query.where[0][0] == 'doctorId');
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (isOwner(resource.data.patientId) || isOwner(resource.data.doctorId));
    }
    
    // REGLAS DE ADMINISTRACIÃ“N (TEMPORALMENTE INSEGURAS PARA DESPLIEGUE)
    match /roles_admin/{userId} {
      // Cualquiera autenticado puede escribir para solucionar el problema de permisos inicial.
      allow write: if request.auth != null;
      allow read, list: if isAdmin();
    }
    
    match /subscription_payments/{paymentId} {
        allow create: if true;
        allow read, list, update, delete: if isAdmin();
    }
  }
}
